<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net472</TargetFramework>
    <OutputType>Library</OutputType>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <NoStdLib>false</NoStdLib>
    <LangVersion>preview</LangVersion>
    <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
    <AppendRuntimeIdentifierToOutputPath>false</AppendRuntimeIdentifierToOutputPath>
    <Configurations>v1.3;v1.4</Configurations>
    <AssemblyName>AAM.LightsaberPatch</AssemblyName>
    <RootNamespace>AAM.LightsaberPatch</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Lib.Harmony" Version="2.2.2">
      <ExcludeAssets>runtime</ExcludeAssets>
    </PackageReference>
    <ProjectReference Include="..\ThingGenerator\AAM.csproj">
      <CopyLocal>False</CopyLocal>
      <Private>False</Private>
      <ExcludeAssets>runtime</ExcludeAssets>
    </ProjectReference>
  </ItemGroup>

  <!-- _____ 1.3 _____ -->
  <ItemGroup Condition="'$(Configuration)'=='v1.3'">
    <PackageReference Include="Krafs.Rimworld.Ref" Version="1.3.3389" />
    <Reference Include="SWSaber">
      <HintPath>refs/1.3/SWSaber_13.dll</HintPath>
      <CopyLocal>False</CopyLocal>
      <Private>False</Private>
    </Reference>
    <Reference Include="CompActivatableEffect">
      <HintPath>refs/1.3/CompActivatableEffect_13.dll</HintPath>
      <CopyLocal>False</CopyLocal>
      <Private>False</Private>
    </Reference>
  </ItemGroup>


  <!-- Output -->
  <PropertyGroup Condition="'$(Configuration)'=='v1.3'">
    <DebugType>none</DebugType>
    <OutputPath>..\..\Patch_Lightsabers\1.3\Assemblies\</OutputPath>
    <Optimize>true</Optimize>
    <DefineConstants>TRACE;V13</DefineConstants>
  </PropertyGroup>

  <!-- _____ 1.4 _____ -->
  <ItemGroup Condition="'$(Configuration)'=='v1.4'">
	  <PackageReference Include="Krafs.Rimworld.Ref">
		  <Version>1.4.3573-beta</Version>
	  </PackageReference>
	  <Reference Include="SWSaber">
		  <HintPath>refs/1.3/SWSaber_13.dll</HintPath>
		  <CopyLocal>False</CopyLocal>
		  <Private>False</Private>
	  </Reference>
	  <Reference Include="CompActivatableEffect">
		  <HintPath>refs/1.3/CompActivatableEffect_13.dll</HintPath>
		  <CopyLocal>False</CopyLocal>
		  <Private>False</Private>
	  </Reference>
  </ItemGroup>

  <!-- Output -->
  <PropertyGroup Condition="'$(Configuration)'=='v1.4'">
	  <DebugType>none</DebugType>
	  <OutputPath>..\..\Patch_Lightsabers\1.4\Assemblies\</OutputPath>
	  <Optimize>true</Optimize>
	  <DefineConstants>TRACE;V14</DefineConstants>
  </PropertyGroup>

</Project>
